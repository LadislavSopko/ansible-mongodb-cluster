mongo1 ansible_ssh_host=mongo1 ansible_ssh_private_key_file=/vagrant/.vagrant/machines/mongo1/virtualbox/private_key ansible_become=true
mongo2 ansible_ssh_host=mongo2 ansible_ssh_private_key_file=/vagrant/.vagrant/machines/mongo2/virtualbox/private_key ansible_become=true
mongo3 ansible_ssh_host=mongo3 ansible_ssh_private_key_file=/vagrant/.vagrant/machines/mongo3/virtualbox/private_key ansible_become=true

# the mongo servers need a mongod_port variable set, and they must not conflict.
[mongo_servers]
mongo1 mongod_port=2700
mongo2 mongod_port=2701
mongo3 mongod_port=2702

#The list of servers where replication should happen, by default include all servers
[replication_servers]
mongo1
mongo2
mongo3

#The list of mongodb configuration servers, make sure it is 1 or 3
[mongoc_servers]
mongo1
mongo2
mongo3

#Te list of servers where mongos servers would run.
[mongos_servers]
mongo1
mongo2


